# Backend Environment Variables
NODE_ENV=development
PORT=4000

# MongoDB connection string (use MongoDB Atlas or local Docker)
MONGODB_URI=mongodb://localhost:27017/ai_ingest

# Supabase config
# JWKS URL used for local verification (preferred)
SUPABASE_JWKS_URL=https://<project-ref>.supabase.co/auth/v1/keys
# Optional: fallback verification via Supabase REST if JWKS not set
SUPABASE_URL=https://<project-ref>.supabase.co
SUPABASE_ANON_KEY=

# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173

# OpenAI API Key (optional; if empty, falls back to keyword-based processing)
OPENAI_API_KEY=

# Admin email allowlist (comma separated). First one is the primary admin.
ADMIN_EMAIL=lokeshpawar721@gmail.com
